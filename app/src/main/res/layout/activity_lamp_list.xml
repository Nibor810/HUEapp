<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.arthurtech.hueapp.LampListActivity">

    <fragment
        android:id="@+id/fragmentLamp"
        android:name="nl.arthurtech.hueapp.LampDetailFragment"
        android:layout_width="0dp"
        android:layout_height="176dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentList"
        tools:layout="@layout/fragment_lamp_detail" />

    <fragment
        android:id="@+id/fragmentList"
        android:name="nl.arthurtech.hueapp.ListFragment"
        android:layout_width="0dp"
        android:layout_height="306dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/activity_lamp_list" />
</android.support.constraint.ConstraintLayout>
